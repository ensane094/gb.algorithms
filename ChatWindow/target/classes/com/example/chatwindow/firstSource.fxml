<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.chatwindow.Controller">
    <padding>
        <Insets bottom="4" top="4" left="4" right="4"/>
    </padding>
    <TextArea fx:id="TextArea" VBox.vgrow="ALWAYS" editable="false"/>
    <HBox spacing="3">
        <TextField fx:id="TextField" HBox.hgrow="ALWAYS" />
        <Button text="Отправить" onAction="#SendButton" defaultButton="true"/>
    </HBox>
</VBox>